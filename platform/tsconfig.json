{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"isolatedModules": true,
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./resources/js/*"]
		},
		"typeRoots": ["./node_modules/@types", "vite/client"],
	},
	"include": [
		"./resources/js/**/*.ts",
		"./resources/js/**/*.d.ts",
		"./resources/js/**/*.tsx",
		"./vite.config.ts"
	],
	"exclude": [
		"./coverage/**/*.js",
		"./vendor",
		"./node_modules",
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
